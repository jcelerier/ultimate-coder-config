Xft.dpi: 150
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

urxvt*dynamicColors: on
URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.transparent: false
URxvt.fading: 0
! URxvt.urgentOnBell: true
! URxvt.visualBell: true
URxvt.loginShell: true
URxvt.saveLines: 4000
URxvt.internalBorder: 3
URxvt.lineSpace: 0

! Fonts
URxvt.allow_bold: true
/* URxvt.font: -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
URxvt*font: xft:Hermit:pixelsize=20
URxvt*boldFont: xft:Hermit:pixelsize=20

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! Perl extensions
URxvt.perl-ext-common: default,matcher,clipboardpaste,vtwheel,selection-to-clipboard,urxvt-color
URxvt.matcher.button: 1
URxvt.urlLauncher: x-www-browser
URxvt.perl-lib: /home/doom/scripts

URxvt.keysym.F11: perl:urxvt-color:day
URxvt.keysym.F12: perl:urxvt-color:night

! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false

! Pointer
URxvt.pointerBlank: true

! Solarized-dark default colors

*background: #002b36
*foreground: #839496
*cursor: #93a1a1
*mouse_background: #073642
*mouse_foreground: #93a1a1
*highlight: #073642
*border: #002b36

*color0: #073642
*color8: #002b36

*color1: #dc322f
*color9: #cb4b16

*color2: #859900
*color10: #586e75

*color3: #b58900
*color11: #657b83

*color4: #268bd2
*color12: #839496

*color5: #d33682
*color13: #6c71c4

*color6: #2aa198
*color14: #93a1a1

*color7: #eee8d5
*color15: #fdf6e3

